<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_SplitPay.MainPage"
             BackgroundColor="#323232">

    <ContentPage.Resources>
        <Color x:Key="SectionsMainColor">#444444</Color>
        <Color x:Key="LightColor">#d6d6d6</Color>
        <Color x:Key="DarkColor">#4fd8eb</Color>
        <x:Int16 x:Key="HeightBtn">70</x:Int16>
    </ContentPage.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height=".3*" />
            <RowDefinition Height=".7*" />
        </Grid.RowDefinitions>
        <Frame Padding="10"
               BackgroundColor="{StaticResource SectionsMainColor}">
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="1" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height=".1*" />
                    <RowDefinition Height=".9*" />
                </Grid.RowDefinitions>

                <Label Text="Totale per persona"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   FontSize="Header"
                   FontAttributes="Bold"
                   TextColor="{StaticResource DarkColor}"
                   Grid.ColumnSpan="3"/>

                <Label
                    x:Name="lblTotal"
                    Grid.Row="1"
                    FontAttributes="Bold"
                    FontSize="35"
                    HorizontalTextAlignment="Center"
                    Text="$0.00"
                    TextColor="{StaticResource LightColor}"
                    VerticalOptions="CenterAndExpand" />

                <BoxView
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,10,0,10"
                    WidthRequest="2"
                    VerticalOptions="Fill"
                    HorizontalOptions="Center"
                    Color="#adadad" />

                <VerticalStackLayout Grid.Column="2"
                                     Grid.Row="1"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center">
                    <Label Text="SUBTOTALE"
                       VerticalOptions="Center"
                       TextColor="{StaticResource LightColor}"/>
                    <Label Text="€50.00"
                       TextColor="{StaticResource LightColor}"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Label Text="MANCIA"
                       Margin="0, 10, 0, 0"
                       VerticalOptions="Center"
                       TextColor="{StaticResource LightColor}"/>
                    <Label Text="€50.00"
                       VerticalOptions="Center"
                       TextColor="{StaticResource LightColor}"
                       FontAttributes="Bold"/>

                </VerticalStackLayout>
            </Grid>
        </Frame>
        <Grid Grid.Row="1" Margin="0, 15, 0, 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".4*"/>
                <ColumnDefinition Width=".6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Text="Inserisci il totale:€"
                   VerticalOptions="Center"
                   TextColor="{StaticResource LightColor}"/>

            <Entry x:Name="txtTotal"
                   Grid.Column="1"
                   Grid.Row="0"
                   BackgroundColor="{StaticResource SectionsMainColor}"
                   Keyboard="Numeric"
                   VerticalOptions="Center"
                   TextColor="{StaticResource LightColor}"
                   Text="0.0"/>

            <Label Text="Scegli la mancia"
                   VerticalOptions="Center"
                   Grid.Row="1"
                   TextColor="{StaticResource LightColor}"/>

            <HorizontalStackLayout Grid.Row="1"
                                   Grid.Column="1"
                                   HorizontalOptions="CenterAndExpand"
                                   HeightRequest="{StaticResource Key=HeightBtn}"
                                   Spacing="10">
                <Button Text="10%"
                        WidthRequest="70"/>
                <Button Text="15%"
                        WidthRequest="70"/>
                <Button Text="20%"
                        WidthRequest="70"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="2">
                <Label Text="Mancia:"
                   Grid.Row="2"
                   TextColor="{StaticResource LightColor}"
                   VerticalOptions="Center"/>
                
                <Label x:Name="lblTip"
                       Text="0%"
                       VerticalOptions="Center"
                       TextColor="{StaticResource LightColor}"
                       Margin="2, 0, 0 ,0"/>
            </HorizontalStackLayout>

            <Slider Grid.Row="2"
                    Grid.Column="1"
                    Minimum="0"
                    Maximum="20"/>

            <Label Text="Numero di persone"
                   Grid.Row="3"
                   VerticalOptions="Center"
                   TextColor="{StaticResource LightColor}"/>

            <HorizontalStackLayout Grid.Row="3"
                                   Grid.Column="1" 
                                   HeightRequest="{StaticResource Key=HeightBtn}"
                                   HorizontalOptions="CenterAndExpand"
                                   VerticalOptions="Center">
                <Button x:Name="btnReducePerson"
                        Text="-"
                        VerticalOptions="Center"
                        ZIndex="1"
                        WidthRequest="50"/>

                <Label  x:Name="lblCountPerson"
                        Text="1"
                        VerticalOptions="Center"
                        WidthRequest="100"
                        BackgroundColor="{StaticResource SectionsMainColor}"
                        HeightRequest="44"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        Padding="30, 0, 30, 0"
                        Margin="-10,0,-010,0"
                        ZIndex="0"
                        TextColor="{StaticResource LightColor}"/>

                <Button x:Name="btnIncrementPerson"
                        Text="+"
                        VerticalOptions="Center"
                        ZIndex="1"
                        WidthRequest="50"/>
            </HorizontalStackLayout>
        </Grid>
    </Grid>

    
        
     
</ContentPage>
